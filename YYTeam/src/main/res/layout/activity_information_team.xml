<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/actionbar_base" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <com.somust.yyteam.view.ImageViewPlus
            android:id="@+id/team_image"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算机学院自强社"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="18dp"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/team_type"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_team_study"
            android:layout_marginLeft="12dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="创  建  人："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/team_president"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="杨阳"
            android:textSize="18sp" />

        <com.somust.yyteam.view.ImageViewPlus
            android:id="@+id/team_president_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成立时间："
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/team_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-16"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="社团简介："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/team_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"

            android:ellipsize="end"
            android:maxLines="3"
            android:text="我们是公益性社团，快来加入我们吧我们是公益性社团，快来加入我们吧我们是公益性社团，快来加入我们吧~"
            android:textSize="16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_add_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_add_team"
        android:layout_margin="20dp"
        android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
        android:textColor="#ffffff"/>

</LinearLayout>
