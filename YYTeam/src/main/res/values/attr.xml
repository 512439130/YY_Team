<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="icon_yy" format="reference"></attr>
    <attr name="color_yy" format="color"></attr>
    <attr name="text_yy" format="string"></attr>
    <attr name="text_size_yy" format="dimension"></attr>

    <declare-styleable name="ChangeColorIconWithText">
        <attr name="icon_yy"></attr>
        <attr name="color_yy"></attr>
        <attr name="text_yy"></attr>
        <attr name="text_size_yy"></attr>
    </declare-styleable>

    <declare-styleable name="DropEditText">
        <attr name="drawableRight" format="reference" />
        <attr name="dropMode">
            <enum name="flow_parent" value="0" />
            <enum name="wrap_content" value="1" />
        </attr>
        <attr name="hint" format="string" />
    </declare-styleable>


    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />

    <declare-styleable name="ImageViewPlus">
        <attr name="borderColor" />
        <attr name="borderWidth" />
    </declare-styleable>
</resources>
