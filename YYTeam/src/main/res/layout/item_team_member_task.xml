<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/ic_item_task"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务编号:"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textColor="#df1d04"/>
            <TextView
                android:id="@+id/task_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="#df1d04"/>

            <Button
                android:id="@+id/btn_run"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
                android:text="开始任务"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/team_task_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="自强人欢聚，自强自强人欢聚"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.somust.yyteam.view.ImageViewPlus

                android:id="@+id/team_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/create_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="创建时间:"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/team_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_toRightOf="@id/create_title"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="2017-05-20" />

            <ImageView
                android:id="@+id/team_task_state"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/task_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="5/50"
                android:layout_toLeftOf="@id/team_task_state"
                android:textColor="#666666"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="最大人数:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_toLeftOf="@id/task_number"
                android:layout_centerVertical="true"/>






        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_task_member"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
                android:text="活动人员"
                android:textColor="#ffffff"
                android:textSize="13sp" />



            <Button
                android:id="@+id/btn_add_audit"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
                android:text="报名审核"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
                android:text="任务总结"
                android:textColor="#ffffff"
                android:enabled="false"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ffffff" />
</LinearLayout>