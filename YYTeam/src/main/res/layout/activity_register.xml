<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYTeam"
            android:textColor="#ffffff"
            android:textSize="45dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_stroke_yy"
            android:hint="@string/login_phone_hint"
            android:paddingLeft="40dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="11"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/edt_phone"
            android:layout_alignLeft="@id/edt_phone"
            android:layout_alignTop="@id/edt_phone"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_login_phone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_stroke_yy"
            android:hint="@string/login_code_hint"
            android:paddingLeft="40dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginLeft="10dp"
            android:maxLength="8"
            android:inputType="number"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/edt_code"
            android:layout_alignLeft="@id/edt_code"
            android:layout_alignTop="@id/edt_code"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/ic_login_code" />
        <Button
            android:id="@+id/btn_code"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
            android:text="@string/login_verification_code"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/edt_code"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_verification_button"
        android:layout_margin="10dp"
        android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">



        <EditText
            android:id="@+id/id_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="昵称..."
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/id_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="密码..."
            android:text="123456"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/id_et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="确认密码..."
            android:text="123456"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <RadioGroup
            android:id="@+id/id_rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:contentDescription="性别">

            <RadioButton
                android:id="@+id/id_rb_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男"
                android:textColor="#ffffff"/>

            <RadioButton
                android:id="@+id/id_rb_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="#ffffff"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">



        <Button
            android:id="@+id/id_bt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:background="@drawable/selector_bg_theme2oragne2grey_with_corner"
            android:enabled="false"
            android:textColor="#ffffff"/>


    </LinearLayout>


</LinearLayout>
