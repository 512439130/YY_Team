<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:background="#2c2c2c">

        <RelativeLayout
            android:id="@+id/id_rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="38dp">


            <com.somust.yyteam.view.ImageViewPlus
                android:id="@+id/id_title_back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/id_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/id_title_back"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="19sp"/>
            <ImageView
                android:id="@+id/id_add"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_image_add"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/id_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/id_add"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_image_search"
                android:clickable="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</merge>