<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <!-- 这个TextView就是显示字母的 -->
    <TextView
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#e2e2e2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:text="Z"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/id_friend_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ffffff"

            />

        <com.somust.yyteam.view.ImageViewPlus
            android:id="@+id/iv_lv_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:layout_margin="8dp"

            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/tv_lv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_lv_item_head"
            android:layout_marginLeft="5dip"
            android:text="周华健"/>


        <TextView
            android:id="@+id/team_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cccccc"
        android:layout_above="@id/tv_lv_item_name"

        />

</LinearLayout>
